@model EgyEagles.Domain.Models.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
}

<h2 class="mb-4">Edit Vehicle - @ViewBag.CompanyName</h2>

<form asp-action="Edit" method="post" class="needs-validation">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="PlateNumber" class="form-label"></label>
        <input asp-for="PlateNumber" class="form-control" />
        <span asp-validation-for="PlateNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select">
            <option value="Available">Available</option>
            <option value="InUse">In Use</option>
            <option value="Maintenance">Maintenance</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="CompanyId" />

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
