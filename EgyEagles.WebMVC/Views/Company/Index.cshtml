@model IEnumerable<EgyEagles.Application.DTOs.Companies.CompanyDto>

@{
    ViewData["Title"] = "Companies";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">Companies</h3>
        <a class="btn btn-success rounded-pill px-4" asp-action="Create">
            + Add New Company
        </a>
    </div>

    <div class="card shadow rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Industry</th>
                        <th>Description</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model)
                    {
                        <tr>
                            <td>@company.Name</td>
                            <td>@company.Industry</td>
                            <td>@company.Description</td>
                            <td>@company.CreatedDate.ToShortDateString()</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@company.Id" class="btn btn-outline-primary btn-sm rounded-pill me-1">
                                        View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-outline-warning btn-sm rounded-pill me-1">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@company.Id" class="btn btn-outline-danger btn-sm rounded-pill">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
