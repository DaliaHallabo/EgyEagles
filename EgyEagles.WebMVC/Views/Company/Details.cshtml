@using EgyEagles.Application.DTOs.Companies
@model CompanyWithUsersDto

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">@Model.Name</h2>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            ← Back to Companies
        </a>
    </div>

    <div class="card shadow rounded-4 mb-5">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <p><strong>Industry:</strong> @Model.Industry</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Created At:</strong> @Model.CreatedDate?.ToShortDateString()</p>
                </div>
                <div class="col-12">
                    <p><strong>Description:</strong> @Model.Description</p>
                </div>
                <div class="col-12">
                    <p><strong>Company ID:</strong> @Model.Id</p>
                </div>
            </div>
        </div>
    </div>

    <h3 class="mb-3">Users</h3>
    @if (Model.Users != null && Model.Users.Any())
    {
        <div class="table-responsive mb-5">
            <table class="table table-striped table-hover rounded-3 shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Role</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted fst-italic">No users assigned to this company yet.</p>
    }

    <h3 class="mb-3">Vehicles Assigned to This Company</h3>
    @if (Model.Vehicles != null && Model.Vehicles.Any())
    {
        <div class="table-responsive mb-5">
            <table class="table table-bordered table-hover rounded-3 shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Plate Number</th>
                        <th>Model</th>
                        <th>Type</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehicle in Model.Vehicles)
                    {
                        <tr>
                            <td>@vehicle.PlateNumber</td>
                            <td>@vehicle.Model</td>
                            <td>@vehicle.Type</td>
                            <td>@vehicle.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted fst-italic">No vehicles assigned to this company.</p>
    }
</div>
