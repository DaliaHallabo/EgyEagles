@model EgyEagles.Application.DTOs.Companies.CreateCompanyDto

@{
    ViewData["Title"] = "Add New Company";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary">Add New Company</h3>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            ← Back to List
        </a>
    </div>

    <div class="card shadow rounded-4">
        <div class="card-body px-4 py-4">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control rounded-3" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Industry" class="form-label fw-semibold"></label>
                    <input asp-for="Industry" class="form-control rounded-3" />
                    <span asp-validation-for="Industry" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control rounded-3" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success rounded-pill px-4 me-2">Create</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
