@using EgyEagles.Application.DTOs.Vehicles
@model IEnumerable<VehicleDto>

@{
    ViewData["Title"] = "Vehicles";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold text-primary">Vehicles</h3>
        <a class="btn btn-success rounded-pill px-4" asp-action="Create">
            + Add Vehicle
        </a>
    </div>

    <div class="card shadow rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>Plate Number</th>
                        <th>Model</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Company Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vehicle in Model)
                    {
                        <tr>
                            <td>@vehicle.PlateNumber</td>
                            <td>@vehicle.Model</td>
                            <td>@vehicle.Type</td>
                            <td>@vehicle.Status</td>
                            <td>@vehicle.CompanyName</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@vehicle.Id" class="btn btn-outline-warning btn-sm rounded-pill me-1">
                                        Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@vehicle.Id"
                                       class="btn btn-outline-danger btn-sm rounded-pill"
                                       onclick="return confirm('Are you sure you want to delete this vehicle?');">
                                        Delete
                                    </a>

                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
