@model EgyEagles.Domain.Models.Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-primary">Edit Vehicle</h3>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            ← Back to List
        </a>
    </div>

    <div class="card shadow rounded-4">
        <div class="card-body px-4 py-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="PlateNumber" class="form-label fw-semibold"></label>
                    <input asp-for="PlateNumber" class="form-control rounded-3" />
                    <span asp-validation-for="PlateNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Model" class="form-label fw-semibold"></label>
                    <input asp-for="Model" class="form-control rounded-3" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label fw-semibold"></label>
                    <input asp-for="Type" class="form-control rounded-3" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-semibold"></label>
                    <select asp-for="Status" class="form-select rounded-3">
                        <option value="Available" selected="@(Model.Status == "Available" ? "selected" : "")">Available</option>
                        <option value="InUse" selected="@(Model.Status == "InUse" ? "selected" : "")">In Use</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CompanyId" class="form-label fw-semibold"></label>
                    <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-select rounded-3">
                        <option value="">-- Select Company --</option>
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success rounded-pill px-4 me-2">Update</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
